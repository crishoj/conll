  gem.url = "http://github.com/crishoj/conll"
  gem.summary = "A few classes to work with CoNLL dependency treebanks"
  gem.description = "Classes for creating and manipulating dependency treebanks in the CoNLL format"
  gem.email = "christian@rishoj.net"
  gem.author = "Christian Rish√∏j"
  gem.runtime_dependencies << 'commander'
  gem.development_dependencies << 'rspec'
end
